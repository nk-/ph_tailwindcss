{#
/**
 * @file
 * Theme override of an image.
 *
 * Available variables:
 * - attributes: HTML attributes for the img tag.
 * - style_name: (optional) The name of the image style applied.
 *
 * @see template_preprocess_image()
 */
#}

{%
  set avatar_classes = [  
    not attributes['data-avatar-color'] ? 'opacity-70',
    not attributes['data-avatar-color'] ? 'grayscale-[80%]',
    'w-16',
    'rounded-full',
  ]
%}
<img{{ attributes.addClass(avatar_classes) }} />