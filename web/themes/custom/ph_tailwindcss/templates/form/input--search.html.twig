{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
 
{%
  set animation_classes = [
    'animate__animated',
    'animate__bounceIn',
    'animate__delay-1s',
  ]
%}

{% 
  set input_classes = [
    'collapsible-search-input', 
    'form-input',
    'focus:border-green-pale',
    'text-green-pale',
    'mr-2',
    'transition-all',
    'scale-x-0',
    'invisible',
    'duration-200',
    'ease-linear',
    'w-56',
  ]
%}

{% 
  set icon_classes = [
    'toggle-default',
    'material-icons-outlined',
    'fab-icon',
    'block',
  ]
%}

{% 
  set close_icon_classes = [
    'toggle-close',
    'hidden',
    'animate__animated',
    'animate__fadeIn',
   ]
%}

{% apply spaceless %}
<div{{ create_attribute({'class': 'fab-parent'}) }}>
  <input{{ attributes.addClass(input_classes).setAttribute('data-collapsible-search-target', 'ph_search_input') }} />
  <div{{ create_attribute({'class': animation_classes}) }}>
    <div{{ create_attribute({'class': 'fab-wrapper' }) }}>
      <i{{ create_attribute({'class': icon_classes }).setAttribute('data-collapsible-search', 'ph_search_input').setAttribute('role', 'button') }}>search</i>
      <i{{ create_attribute({'class': icon_classes }).addClass(close_icon_classes).setAttribute('role', 'button') }}>close</i>
    </div>
  </div>
</div>
{{ children }}
{% endapply %}